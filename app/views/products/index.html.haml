%section.admin_payments
  .container
    .row
      .col-sm-10.col-sm-offset-1
        %section.payment_history
          %header.page_header
            %h1 Products
          %table.table
            %thead
              %tr
                %th Product ID
                %th Product
                %th Status
                %th Description
                %th Price ($)
            %tbody
              - @products.each do |product|
                %tr
                  %td.product_id= product.id
                  %td.name= product.name
                  %td.status= product.status
                  %td.description= product.description
                  %td.default_price= product.default_price
