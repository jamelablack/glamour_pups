%section.admin_payments
  .container
    .row
      .col-sm-10.col-sm-offset-1
        %section.payment_history
          %header
            %h1 Account
  %section.user_reviews.container
    .row
      .col-sm-10.col-sm-offset-1
        %ul
          %article.review
            %li.row
              .col-sm-2
                %label Account ID
              .col-sm-8
                %p= @account.id
            %li.row
              .col-sm-2
                %label Subdomain
              .col-sm-8
                %p= @account.subdomain
            %li.row
              .col-sm-2
                %label Store Name
              .col-sm-8
                %p= @account.store_name
            %li.row
              .col-sm-2
                %label Description
              .col-sm-8
                %p= @account.description
            %li.row
              .col-sm-2
                %label Contact Email
              .col-sm-8
                %p= @account.contact_email

